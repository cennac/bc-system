<form class="bc-page" data-type='form' style="overflow: auto;"
	data-namespace="bswf.generalOrder.InChargeDeputyGeneralManagerCheckForm"
	data-js='js:bc_identity,bc-business/bs.js,wf:InChargeDeputyGeneralManagerCheck2JS_${pd_id}.js'
	data-readonly="<#if readonly??>${readonly}<#else>false</#if>">
	<#if readonly == 'false'>
		<div style="padding-left:0.5em;width:635px;">
			<textarea name="view" class="autoHeight ui-widget-content" style="width:100%;" data-validate="required" placeholder="(审批意见)"/>
		</div>
		<div style="padding-left:0.5em;">
			<input type="hidden" name="chairman"    data-scope="global" class="ignore" value="zhou"/>
			<input type="hidden" name="is_ICDGMC_to_CC_flow" class="ignore" data-scope="global" value="true" data-type="boolean"/>
			<input type="hidden" name="handing"/>
			确认下一步的处理方式：
			<input type="radio"  name="rhanding" class="ignore" value="送部门经理落实执行" style="width:auto;" />
			<label>送部门经理落实执行</label>
			<input type="radio"  name="rhanding" class="ignore" value="送董事长审批"  style="width:auto;" />
			<label>送董事长审批</label>
		</div>
	<#else>	
		<div style="padding-left:0.5em;">
			<div class="text ui-widget-content" style="width:635px;word-break: break-all;">${view!}</div>
		</div>
		<div style="padding-left:0.5em;">
			下一步的处理方式：${handing!}
		</div>
	</#if>
</form>