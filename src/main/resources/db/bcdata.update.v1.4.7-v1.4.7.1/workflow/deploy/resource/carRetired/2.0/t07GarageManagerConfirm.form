<form class="bc-page" data-type='form' style="overflow: auto;"
	data-namespace="bswf.carRetired.GarageManagerConfirmForm"
	data-js='wf:GarageManagerConfirm2JS_${pd_id}.js'
	data-readonly="<#if readonly??>${readonly}<#else>false</#if>">
	<div style="width:640px">
	<#if readonly == 'false'>
		<div  style="padding-left:0.5em;">
		<div style="display:inline-block;vertical-align:top;">厂长意见：</div>
			<textarea name="gmc_desc"  data-scope="global" rows="3" style="width:80%;" class="ui-widget-content noresize" ></textarea>
		</div>
	<#else>
		<div  style="padding-left:0.5em;">
			<div style="display:inline-block;vertical-align:top;">厂长意见：</div>
			${gmc_desc!}
		</div>
	</#if>
	</div>
</form>