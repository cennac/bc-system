<form class="bc-page" data-type='form' style="overflow: auto;"
	data-namespace="bswf.generalOrder.OperationDirectorCheckForm"
	data-js='js:bc_identity,bc-business/bs.js,wf:OperationDirectorCheck2JS_${pd_id}.js'
	data-readonly="<#if readonly??>${readonly}<#else>false</#if>">
	<#if readonly == 'false'>
		<div style="padding-left:0.5em;width:635px;">
			<textarea name="view" class="autoHeight ui-widget-content" style="width:100%;" data-validate="required" placeholder="(审批意见)" />
		</div>
		<div style="padding-left:0.5em;">
			<input type="hidden"  name="reading"/>
			*查看审批意见：
			<input type="radio"   name="rreading" class="ignore" value="default"  style="width:auto;" checked />
			<label>默认用户</label>
			<input type="radio"   name="rreading" class="ignore" value="custom"  style="width:auto;"  />
			<label>指定用户</label>
		</div>
		<div id="ReadUpperInforUsers4Id" style="display:none;padding-left:0.5em;vertical-align:top;">
			>用户：
			<div class="row ui-widget-content" style="width:400px;display:inline-block;">
				<input type="hidden" class="ignore" value="">
				<input type="hidden" class="ignore" value="" >
				<input type="hidden" name="list_readUpperInforUsers" class="ignore bswf-generalOrder-ignore"/>
				<div style="position:relative;margin: 0;padding: 1px 0;min-height:19px;margin: 0;font-weight: normal;width: 98%;" >
					<span class="selectTransactor selectButton verticalMiddle ui-icon ui-icon-circle-plus"  title="点击添加"></span>
					<ul class="horizontal" style="padding: 0;overflow:hidden;"></ul>
				</div>
			</div>
		</div>
		<div style="padding-left:0.5em;">
			<input type="hidden" name="is_ODC_to_GMGC_flow" class="ignore"  data-scope="global" value="true"  data-type="boolean"/>
			<input type="hidden" name="handing"/>
			*确认下一步的处理方式：
			<input type="radio"  name="rhanding" class="ignore" value="送部门经理确认" style="width:auto;"  />
			<label>送部门经理确认</label>
			<input type="radio"  name="rhanding" class="ignore" value="送总经理组审批"  style="width:auto;" />
			<label>送总经理组审批</label>
		</div>
		<div id="GeneralManagerGroupCheck" style="display:none;padding-left:0.5em;vertical-align:top;">
			>总经理：
			<div class="row ui-widget-content" style="width:400px;display:inline-block;">
				<input type="hidden" class="ignore" value="总经理">
				<input type="hidden" class="ignore" value="zongjingli" >
				<input type="hidden" name="list_gmgc4assignee" data-scope="global" data-type="list" 	 class="ignore bswf-generalOrder-ignore"/>
				<input type="hidden" name="list_gmgc4assignee4local"  data-type="list" 	 class="ignore bswf-generalOrder-ignore"/>
				<input type="hidden" name="is_GMGC_to_CC_flow" data-scope="global" data-type="boolean" class="ignore bswf-generalOrder-ignore" value="false">
				<div style="position:relative;margin: 0;padding: 1px 0;min-height:19px;margin: 0;font-weight: normal;width: 98%;" >
					<span class="selectTransactor selectButton verticalMiddle ui-icon ui-icon-circle-plus"  title="点击添加"></span>
					<ul class="horizontal" style="padding: 0;overflow:hidden;"></ul>
				</div>
			</div>
		</div>
	<#else>	
		<div style="padding-left:0.5em;">
			<#assign flag="1"><#-- 定义查看的变量 -->
			<#if reading??&&reading == "default"><#-- 默认用户 -->
				<#assign flag="0">
			<#elseif SystemContext.user.code==ti_assignee><#-- 任务完成人 -->
				<#assign flag="0">
			<#elseif SystemContext.hasAnyOneGroup("dongshizhang")><#-- 董事长 -->
				<#assign flag="0">
			<#elseif SystemContext.hasAnyOneRole("BC_WORKFLOW")><#-- 流程管理员 -->
				<#assign flag="0">
			<#elseif SystemContext.hasAnyOneGroup("yingyunzongjian,zongjingli")><#-- 营运总监，总经理 -->
				<#assign flag="0">
			<#elseif list_readUpperInforUsers??><#-- 指定的用户 -->
				<#-- 循环判断当前用户是否在集合之内 -->
				<#assign flag="1">
				<#list list_readUpperInforUsers as u>
					<#if u.code==SystemContext.user.code>
						<#assign flag="0">
						<#break>
					</#if>
				</#list>
			</#if>
			<#if flag=="0">
				<div class="text" style="width:635px;word-break: break-all;">${view!}</div>
			<#else>
				<div class="text" style="width:635px;word-break: break-all;">******</div>
			</#if>
		</div>
		<#if reading??&&reading == "custom">
			<div style="padding-left:0.5em;" style="word-break: break-all;">
				>查看审批意见用户：
				<#list list_readUpperInforUsers as u>
					${u.name!}<#if u_has_next>、</#if>
				</#list>
			</div>
		</#if>
		<#if handing??&&handing == "送总经理组审批">
			<div style="padding-left:0.5em;" style="word-break: break-all;">
				>送总经理
				<#list list_gmgc4assignee4local as d>
					${d.assigneeName!}<#if d_has_next>、</#if>
				</#list>
				审批
			</div>
		<#elseif handing??>
			<div style="padding-left:0.5em;" style="word-break: break-all;">
				>${handing!}
			</div>
		</#if>
	</#if>
</form>